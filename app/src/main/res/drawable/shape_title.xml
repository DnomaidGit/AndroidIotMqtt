<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="2sp"
        android:color="#FFFFFFFF"
    ></stroke>
    <padding
        android:left="2sp"
        android:right="2sp"
        android:top="2sp"
        android:bottom="2sp"
    ></padding>
    <corners
        android:radius="8dp"
    ></corners>
    <solid
        android:color="@color/colorBackgroundTitle"
    ></solid>
    <gradient
        android:angle="0"
        android:centerColor="#0C616161"
        android:startColor="@color/colorBackgroundTitle"
        android:endColor="#FFFFFF"
        android:type="linear" />
</shape>