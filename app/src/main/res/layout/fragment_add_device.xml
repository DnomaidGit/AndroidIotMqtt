<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addDevice.AddDeviceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">
        <!--Device-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/colorConfig"
                android:textColor="@color/colorText"
                android:text="@string/device">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/numDeviceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/numDeviceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="17dip"
                android:text="@string/numDeviceText" />
            <TextView
                android:id="@+id/textNumberDevice"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:ems="10"
                android:hint="@string/numberDeviceHint"
                android:inputType="text" />
            <Spinner
                android:id="@+id/spinnerNumberDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/typeDeviceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/typeDeviceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="30dip"
                android:text="@string/typeDeviceText" />
            <TextView
                android:id="@+id/textTypeDevice"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:ems="10"
                android:hint="@string/numberDeviceHint"
                android:inputType="text" />
            <Spinner
                android:id="@+id/spinnerTypeDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            ></Spinner>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnAddDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connectText"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
